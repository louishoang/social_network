<!DOCTYPE html>
<html>
  <head>
    <title>SocialNetwork</title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Fjalla+One">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-static-top app-navbar">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Social Age</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if current_user.present? %>
              <li class="active"><a href="<%= user_path(current_user) %>">Home</a></li>
              <li><a href="<%= edit_user_path(current_user) %>">Profile</a></li>
            <% end %>
            <!-- <li><a href="#message">Message</a></li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <form class="search-form" role="search">
                <div class="form-group">
                  <input type="text" class="form-control m-search" placeholder="Search">
                </div>
              </form>
            </li>
            <% if current_user.present? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="<%= edit_user_path(current_user) %>">Profile</a></li>
                  <li>
                    <%= link_to destroy_user_session_path, :method => :delete do %>
                      <i class="icon fa fa-sign-out"></i> Logout
                    <% end %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container main-container">
      <% if notice %>
        <div class="alert alert-info" role="alert">
          <p class="notice"><%= notice %></p>
        </div>
      <% elsif alert %>
        <div class="alert alert-danger" role="alert">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer id="footer" class="footer color-bg">
      <div class="copyright-bar">
        <div class="container">
          <div class="col-xs-12 col-sm-6 no-padding">
            <div class="copyright">
              Copyright Â© 2015 - Louis Hoang - All rights reserved
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
