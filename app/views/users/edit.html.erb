<%= form_for @user, url: user_path(@user), html: {class: "form-horizontal", method: "PUT", multipart: true } do |f| %>

  <div class="col-sm-12 col-md-12 nopadding">
    <div class="row-fluid"><h2><%= t"Edit Information" %></h2></div>
    <div class="row-fluid form-container x2-padding">
      <div class="form-group">
        <%= f.label :first_name, class: "info-title" do %>
          First Name:
        <% end %>
        <%= f.text_field :first_name, :class => "form-control", :value => @user.first_name %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: "info-title" do %>
          Last Name:
        <% end %>
        <%= f.text_field :last_name, :class => "form-control", :value => @user.last_name %>
      </div>
      <div class="form-group">
        <%= f.label :bio, class: "info-title" do %>
          Short Description:
        <% end %>
        <%= f.text_area :bio, :class => "form-control" %>
      </div> 
      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>
    </div>   
    <div class="col-xs-12 m-t-20">
      <div class="col-xs-9 col-md-9 text-right">
        <button type="submit" class="btn-upper btn btn-lg btn-success"><%= t"Save" %></button>
      </div>
    </div>
  </div>
<% end %>